---
import { Cursos } from '../../cursos.js';
import StarAll from '../icons/StarAll.astro';
import Star from '../icons/Star.astro';
---

<section class="w-[90%] max-w-[1000px] mx-auto ">
    <h2 class="text-center text-3xl font-[700] mb-8">Cursos En LÃ­nea</h2>
    <div class="grid grid-cols-3p gap-6" id="lista-cursos">
        {
            Cursos.map(curso =>(
                <article class="rounded-xl overflow-hidden bg-no-repeat bg-cover bg-center group" style={`background-image:url(${curso.image})`}>
                    <img src={curso.image} alt="imagen del curso" class="hidden"/>
                    
                    <div class="p-4 flex flex-col gap-2 translate-y-36 group-hover:translate-y-0 transition-all duration-300 ease-linear bg-sucentOrange-50 group-hover:bg-[#ffffff99] h-full">
                        <h3 class="text-lg font-bold leading-6">{curso.nombre}</h3>
                        <p class="text-sucentOrange-900">{curso.autor}</p>
                        <div class="valoracion flex gap-2">
                            <StarAll class="w-[18px] fill-star"></StarAll>
                            <StarAll class="w-[18px] fill-star"></StarAll>
                            <StarAll class="w-[18px] fill-star"></StarAll>
                            <StarAll class="w-[18px] fill-star"></StarAll>
                            <Star class="w-[18px] fill-star"></Star>
                        </div>
                        <div class="flex justify-between items-center">
                            <p class="line-through text-lg">{curso.precioOriginal}</p>
                            <p class="precioDescuento font-bold text-xl text-sucentOrange-600">{curso.precioDescuento}</p>
                        </div>
                        <a id="agregar" href="#" class="agregar text-center text-white bg-sucentOrange-600 py-2 rounded-lg transition-colors duration-300 ease-in-out hover:bg-sucentOrange-800 active:bg-sucentOrange-950 font-semibold" data-id={curso.dataId}>Add to cart</a>
                    </div>
                </article>
            ))
        }
    </div>
</section>